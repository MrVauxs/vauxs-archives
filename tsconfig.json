{
	"compilerOptions": {
		"target": "ES2022",
		"baseUrl": ".",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"paths": {
			"$lib/*": [
				"src/lib/*"
			],
			"moduleJSON": [
				"module.json"
			]
		},
		"types": [
			"node",
			"vite/client",
			"jquery",
			"foundry-pf2e",
			"foundry-pf2e/lib-wrapper"
		],
		"allowImportingTsExtensions": true,
		"allowJs": true,
		"checkJs": true,
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		// Best practices
		"noEmit": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"verbatimModuleSyntax": true,
		"skipLibCheck": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules/*"
	]
}
